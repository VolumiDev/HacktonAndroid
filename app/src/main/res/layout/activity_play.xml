<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PlayActivity">

    <LinearLayout
        android:id="@+id/linearbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_marginTop="130dp"
            android:layout_weight="3"
            android:src="@drawable/logo" />

        <TextView
            android:fontFamily="@font/aldrich"
            android:id="@+id/tv_question"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2.5"
            android:background="@drawable/tv_border"
            android:gravity="center"
            android:text="PREGUNTA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:fontFamily="@font/aldrich"
            android:id="@+id/btn_a"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:width="310dp"
            android:minHeight="48dp"
            android:text="ResponseA"
            android:textColor="#FFFFFF" />

        <Button
            android:fontFamily="@font/aldrich"
            android:id="@+id/btn_b"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:width="310dp"
            android:minHeight="48dp"
            android:text="ResponseB"
            android:textColor="#FFFFFF" />

        <Button
            android:fontFamily="@font/aldrich"
            android:id="@+id/btn_c"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:width="310dp"
            android:minHeight="48dp"
            android:text="ResponseC"
            android:textColor="#FFFFFF" />

        <Button
            android:fontFamily="@font/aldrich"
            android:id="@+id/btn_d"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:width="310dp"
            android:minHeight="48dp"
            android:text="ResponseD"
            android:textColor="#FFFFFF" />

        <Button
            android:fontFamily="@font/aldrich"
            android:id="@+id/btn_submit"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Send Response"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="605dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/tierra" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/cohete" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/punto" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/luna" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
